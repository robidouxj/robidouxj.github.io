<creature>
	<tick>
		<min>100</min>
		<max>10000</max>
		<start>1000</start>
	</tick>
	<day>
		<min>0</min>
		<max>10000</max>
		<start>1</start>
	</day>
	<name>Algy the Algae</name>
	<type>algae</type>
	<health>
		<min>0</min>
		<max>100</max>
		<start>50</start>
	</health>
	<nutrition>100</nutrition>
	<light>100</light>
	<waterDirty>0</waterDirty>
	<co2>100</co2>
	<money>
		<min>0</min>
		<max>100000</max>
		<start>1000</start>
	</money>
	<happiness>
		<min>0</min>
		<max>4</max>
		<start>2</start>
	</happiness>
	<growing>1</growing>
	<stagnant>0</stagnant>
	<desc>----------------------------------------</desc>
	<effects>
		<desc>effects happen once per tick</desc>
		<effect>
			<property>nutrition</property>
			<value>-1</value>
		</effect>
		<effect>
			<property>co2</property>
			<value>-1</value>
		</effect>
		<effect>
			<property>waterDirty</property>
			<value>2</value>
			<label>health</label>
		</effect>
		<effect>
			<property>day</property>
			<value>.1</value>
		</effect>
	</effects>
	
	<desc>-------------------------------------------------------</desc>
	<actions>
		<desc>actions are triggered by user</desc>
		<action>
			<name>feed</name>
			<desc>Add nitrogen and phosphorus</desc>
			<trigger>
				<property>money</property>
				<comparator>ge</comparator>
				<value>20</value>
			</trigger>
			<effect>
				<property>nutrition</property>
				<value>20</value>
			</effect>
			<effect>
				<property>waterDirty</property>
				<value>10</value>
			</effect>
			<effect>
				<property>money</property>
				<value>-20</value>
			</effect>
		</action>
		<action>
			<name>aerate</name>
			<desc>Add CO2</desc>
			<trigger>
				<property>money</property>
				<comparator>ge</comparator>
				<value>5</value>
			</trigger>
			<effect>
				<property>co2</property>
				<value>20</value>
			</effect>
			<effect>
				<property>waterDirty</property>
				<value>-5</value>
			</effect>
			<effect>
				<property>money</property>
				<value>-5</value>
			</effect>
		</action>
		<action>
			<name>clean</name>
			<desc>Clean algae tube</desc>
			<effect>
				<property>nutrition</property>
				<value>-30</value>
			</effect>
			<effect>
				<property>co2</property>
				<value>-30</value>
			</effect>
			<effect>
				<property>waterDirty</property>
				<value>-100</value>
			</effect>
		</action>
		<action>
			<name>harvest</name>
			<desc>Collect algae</desc>
			<trigger>
				<property>health</property>
				<comparator>gt</comparator>
				<value>30</value>
			</trigger>
			<effect>
				<property>health</property>
				<value>-30</value>
			</effect>
			<effect>
				<property>waterDirty</property>
				<value>-20</value>
			</effect>
			<effect>
				<property>money</property>
				<value>2000</value>
			</effect>
		</action>
		
	</actions>
	<desc>-----------------------------------------------------------</desc>
	<affects> <desc>Affects occur once per tick based on a set of triggers</desc>
		<affect> <desc>Nutrition to low</desc>
			<trigger>
				<property>nutrition</property>
				<comparator>le</comparator>
				<value>10</value>
			</trigger>
			<effect>
				<property>health</property>
				<value>-1</value>
			</effect>
		</affect>
		<affect> <desc>co2</desc>
			<trigger>
				<property>co2</property>
				<comparator>le</comparator>
				<value>30</value>
			</trigger>
			<effect>
				<property>health</property>
				<value>-.1</value>
			</effect>
		</affect>
		<affect> <desc>water quality affects light level</desc>
			<trigger>
				<property>waterDirty</property>
				<comparator>ge</comparator>
				<value>30</value>
			</trigger>
			<effect> <desc>light decreases as waterDirty increases</desc>
				<property>light</property>
				<value>-3</value>
				<label>waterDirty</label>
			</effect>
		</affect>
		<affect> <desc>cleaner water improves light level</desc>
			<trigger>
				<property>waterDirty</property>
				<comparator>le</comparator>
				<value>30</value>
			</trigger>
			<effect>
				<property>light</property>
				<value>3</value>
				<label>waterDirty</label>
				<invert></invert>
			</effect>
		</affect>
		<affect> <desc>average light level too low</desc>
			<trigger>
				<property>light</property>
				<comparator>le</comparator>
				<value>30</value>
			</trigger>
			<effect>
				<property>health</property>
				<value>-.1</value>
			</effect>
		</affect>
		<affect> <desc>growth</desc>
			<trigger>
				<property>nutrition</property>
				<comparator>ge</comparator>
				<value>60</value>
			</trigger>
			<trigger>
				<property>co2</property>
				<comparator>ge</comparator>
				<value>60</value>
			</trigger>
			<trigger>
				<property>light</property>
				<comparator>ge</comparator>
				<value>60</value>
			</trigger>
			<effect> <desc>Algae growth increases with population</desc>
				<property>health</property>
				<value>.9</value>
				<label>health</label>
				<min>.01</min>
			</effect>
			<effect>
				<property>growing</property>
				<operator>=</operator>
				<value>1</value>
			</effect>
			<effectFalse>
				<property>growing</property>
				<operator>=</operator>
				<value>0</value>
			</effectFalse>
		</affect>
		<affect> <desc>Stagnant</desc>
			<trigger>
				<property>growing</property>
				<comparator>eq</comparator>
				<value>0</value>
			</trigger>
			<trigger>
				<property>nutrition</property>
				<comparator>gt</comparator>
				<value>10</value>
			</trigger>
			<trigger>
				<property>co2</property>
				<comparator>gt</comparator>
				<value>30</value>
			</trigger>
			<trigger>
				<property>light</property>
				<comparator>gt</comparator>
				<value>30</value>
			</trigger>
			<effect>
				<property>stagnant</property>
				<operator>=</operator>
				<value>1</value>
			</effect>
			<effectFalse>
				<property>stagnant</property>
				<operator>=</operator>
				<value>0</value>
			</effectFalse>
		</affect>
		<affect> <desc>Happiness</desc>
			<trigger>
				<property>growing</property>
				<comparator>eq</comparator>
				<value>1</value>
			</trigger>
			<trigger>
				<property>health</property>
				<comparator>gt</comparator>
				<value>0</value>
			</trigger>
			<effect>
				<property>happiness</property>
				<operator>=</operator>
				<value>3</value>
			</effect>
		</affect>
		<affect> <desc>Happiness</desc>
			<trigger>
				<property>stagnant</property>
				<comparator>eq</comparator>
				<value>1</value>
			</trigger>
			<trigger>
				<property>health</property>
				<comparator>gt</comparator>
				<value>0</value>
			</trigger>
			<effect>
				<property>happiness</property>
				<operator>=</operator>
				<value>2</value>
			</effect>
		</affect>
		<affect> <desc>Happiness</desc>
			<trigger>
				<property>growing</property>
				<comparator>eq</comparator>
				<value>0</value>
			</trigger>
			<trigger>
				<property>stagnant</property>
				<comparator>eq</comparator>
				<value>0</value>
			</trigger>
			<trigger>
				<property>health</property>
				<comparator>gt</comparator>
				<value>0</value>
			</trigger>
			<effect>
				<property>happiness</property>
				<operator>=</operator>
				<value>1</value>
			</effect>
		</affect>
		<affect> <desc>Happiness</desc>
			<trigger>
				<property>health</property>
				<comparator>le</comparator>
				<value>0</value>
			</trigger>
			<effect>
				<property>happiness</property>
				<operator>=</operator>
				<value>0</value>
			</effect>
		</affect>
	</affects>
</creature>
